<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.SobrePage"
             Title="Sobre o AppHotel"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout Spacing="20"
                         Padding="30"
                         VerticalOptions="Center">

        <Label Text="AppHotel"
               FontSize="30"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="{StaticResource Primary}"/>

        <Label Text="Versão 1.0"
               FontSize="18"
               HorizontalOptions="Center"
               TextColor="{StaticResource Gray900}"/>

        <BoxView HeightRequest="1"
                 Color="{StaticResource Gray400}"
                 HorizontalOptions="Fill"/>

        <Label Text="Desenvolvido por:"
               FontSize="16"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0, 10, 0, 0"/>

        <Label Text="Beatriz Gomes Félix"
               FontSize="20"
               HorizontalOptions="Center"
               TextColor="{StaticResource Tertiary}"/>

        <Label Text="Ano de Desenvolvimento: 2025 - Novembro"
               FontSize="16"
               HorizontalOptions="Center"
               TextColor="{StaticResource Gray900}"/>

        <Button Text="Voltar"
                Clicked="OnVoltarClicked"
                HorizontalOptions="Center"
                Margin="0, 30, 0, 0"/>

    </VerticalStackLayout>
</ContentPage>
